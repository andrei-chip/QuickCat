@model QuickCat.ModelView.CustomerViewModel
<div id="products" class="row list-group">
    @for (var i = 0; i < Model.products.Count; i++)
    {
        if (i % 4 == 0)
        {<br />}
        <div class="item  col-xs-3 col-lg-3">
            <div class="thumbnail">
                <img class="group list-group-image" src="~/Images/products/@Model.products[i].ProductImg" alt="" />
                <div class="caption">
                    <h4 class="group inner list-group-item-heading">
                        @Model.products[i].ProductName
                    </h4>
                    <p class="group inner list-group-item-text">
                        @Model.products[i].ProductText
                    </p>
                   
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <p class="lead">
                                    @Model.products[i].ProductPrice ILS
                                </p>
                            </div>
                            @if (Model.customer != null)
                            {
                            <div class="col-xs-12 col-md-6">
                                <input name="@Model.products[i].ProductID" class="btn btn-success" id="AddToCart" type="submit" value="Add to cart" onclick="SendData(this.getAttribute('name'))" />
                            </div>
                            }
                        </div>
                    
                </div>
            </div>
        </div>
    }
    <script language="javascript">
        function refresh() {

            setTimeout(function () {
                location.reload()
            }, 100);
        }
            function SendData(id)
            {
                $.post("/User/AddProductToCart", id, refresh);

            }


    </script>
</div>

